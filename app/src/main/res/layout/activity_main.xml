<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.PlaceholderFragment"
    android:background="@drawable/riftback">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:weightSum="6"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/summonerName"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:imeOptions="actionSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TheGameChanger"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:hint="summoner name"
                android:textStyle="bold"
                android:layout_weight="5"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:weightSum="2">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/leesin"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                android:layout_gravity="center_horizontal"
                app:civ_shadow_color="#8BC34A"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summoner name"
                    android:id="@+id/summName"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="1.5"
                    android:shadowDy="1.5"
                    android:shadowRadius="3"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Challenger"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="1.5"
                    android:shadowDy="1.5"
                    android:shadowRadius="3"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    >

                </TextView>
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider"
            android:outlineSpotShadowColor="@android:color/background_dark"
            android:layout_margin="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MostPlayed"
            android:textSize="15dp"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#000000"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="3"


            android:text="Most played champions"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/FirstChampImg"
                    android:src="@drawable/leesin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/FirstChampPct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="645.332"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="1.5"
                    android:shadowDy="1.5"
                    android:shadowRadius="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/SecondChampImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/leesin"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/SecondChampPct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="689.319"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="1.5"
                    android:shadowDy="1.5"
                    android:shadowRadius="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ThirdChampImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/leesin"
                    android:layout_margin="5dp"/>


                <TextView
                    android:id="@+id/ThirdChampPct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.095.114"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="1.5"
                    android:shadowDy="1.5"
                    android:shadowRadius="3"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/dividers"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider"
            android:outlineSpotShadowColor="@android:color/background_dark"
            android:layout_margin="10dp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matchhistoryText"
            android:text="Match history: "
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/recyclerview"
        android:paddingTop="10dp"

        >

    </androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>
</LinearLayout>